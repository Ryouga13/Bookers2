<h1>Books#index</h1>


<div>
  <%= flash[:notice] %>
</div>



<h2>Uers info</h2>
<div>
  <%= image_tag @user_id.get_profile_image(100,100) %>
  <table>
  <thead>
  <th>name</th>
  <th><%= @user_id.name %></th>
  </thead>

  <tbody>
  <th>introduction</th>
  <th><%= @user_id.introduction %></th>
  </tbody>
  </table>
</div>

<%= link_to 'Edit', "/users/#{@user_id.id}/edit" %>



<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book,url: '/books',method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <br />
  <%= f.submit 'Create Book' %>
<% end %>





<h2>Books</h2>
<% @book_all.each do |f| %>

  <table>

  <thead>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  </thead>

  <tbody>
  <td>
  <%= link_to "/users/#{f.user.id}" do %>
  <%= image_tag f.user.get_profile_image(100,100) %>
  <% end %></td>
  <td><%= link_to f.title, "/books/#{f.id}" %></td>
  <td><%= f.body %></td>
  </tbody>

  </table>

 
<% end %>