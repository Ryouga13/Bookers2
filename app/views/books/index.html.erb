<h1>Books#index</h1>


<div>
  <%= flash[:notice] %>
</div>

<%= render 'side_bar', user_id: @user_id, book: @book %>



<h2>Books</h2>
<% @book_all.each do |f| %>

  <table>

  <thead>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  </thead>

  <tbody>
  <td>
  <%= link_to "/users/#{f.user.id}" do %>
  <%= image_tag f.user.get_profile_image(100,100) %>
  <% end %></td>
  <td><%= link_to f.title, "/books/#{f.id}" %></td>
  <td><%= f.body %></td>
  </tbody>

  </table>

 
<% end %>