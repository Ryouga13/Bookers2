<h1>Books#edit</h1>


<h2>Editing Book</h2>

<%= form_with model: @book_edit, url: "/books/#{@book_edit.id}" , method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Opinion</p>
  <%= f.text_area :body %>
  
  <br />
  <%= f.submit 'Update Book' %>

  <br />
  <%= link_to 'Show', "/books/#{@book_edit.id}" %>
  |
  <%= link_to 'Back', "/books" %>
  
<% end %>