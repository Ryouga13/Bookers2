
<div class='container px-5 px-sm-0'>
	<div class='row'>


<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= render 'side_bar', user_id: @user_id, book: @book %>


<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

<table class="table table-hover table-inverse">
<tbody>
<tr>
<td>
  <%= link_to "/users/#{@book_id.user.id}" do %>
  <%= image_tag @book_id.user.get_profile_image(100,100) %>
  <br>
  <%=  @book_id.user.name %>
  <% end %></td>
<td><%= link_to @book_id.title, "/books/#{@book_id.id}" %></td>
<td><%= @book_id.body %></td>

<td><div class="actions">
  <%= book_path(@book_id.id).submit "Edit", class: "btn btn-success" %>
  </div></td>
<td><%= link_to 'Destroy', "/books/#{@book_id.id}", method: :delete, "data-confirm" => "本当に消しますか？" %>
</td></tr>
</tbody>
</table>


</div>
</div>
</div>
