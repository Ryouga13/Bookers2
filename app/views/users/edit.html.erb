
<div class='container>
	<div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>

<% if @user_edit.errors.any? %>
  <%= @user_edit.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user_edit.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user_edit do |f| %>
  <label for="inputName">Name</label>
  <br />
  <%= f.text_field :name, autofocus: true, id:"inputName"%>
  <br />
  <label for="inputImage">Image</label>
  <br />
  <%= f.file_field :profile_image, accept: "image/*" %>
  <br />
  <label for="inputName">Introduction</label>
  <br />
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction"%>
  <br />  
  <div class="actions">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
<% end %>


</div>
</div>
</div>