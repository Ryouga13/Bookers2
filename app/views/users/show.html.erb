<h1>Users#show</h1>


<%= render 'books/side_bar', user_id: @user_id, book: @book %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<% @user_show.books.each do |f| %>
<table class="table table-hover table-inverse">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="3"></th>
<tr>
</thead>

<tbody>
<tr>
<td>
  <%= link_to "/users/#{@user_show.id}" do %>
  <%= image_tag @user_show.get_profile_image(100,100) %>
  <% end %></td>
<td><%= link_to f.title, "/books/#{f.id}" %></td>
<td><%= f.body %></td>
</tr>
</tbody>
</table>

<% end %>

</div>





